{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "TcpListener": {
    "Port": 5000,
    "MaxConcurrentClients": 100,
    "BufferSize": 4096,
    "ClientTimeoutMs": 30000,
    "MaxBufferSizePerClient": 1048576,
    "DeduplicationCacheMaxSizePerDevice": 1000
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topic": "device-messages"
  },
  "AllowedHosts": "*"
}