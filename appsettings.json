{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Confluent.Kafka": "Warning"
    }
  },
  "TcpListener": {
    "Port": 5000,
    "MaxConcurrentClients": 100,
    "BufferSize": 4096,
    "ClientTimeoutMs": 30000,
    "MaxBufferSizePerClient": 1048576,
    "DeduplicationCacheMaxSizePerDevice": 1000
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "DeviceMessageTopic": "device-messages",
    "DeviceEventTopic": "device-events",
    "ClientId": "message-sender-service",
    "MessageTimeoutMs": 30000,
    "Acks": "all",
    "Retries": 3,
    "EnableIdempotence": true,
    "CompressionType": "snappy"
  },
  "AllowedHosts": "*"
}